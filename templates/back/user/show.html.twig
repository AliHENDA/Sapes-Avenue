{% extends 'back/layout_back.html.twig' %}

{% block title %}User - Wear Avenue{% endblock %}

{% block body %}
	<div class="container">
		<h1>User :
			{{ user.name }}</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Password</th>
					<td>{{ user.password }}</td>
				</tr>
				<tr>
					<th>Firstname</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Lastname</th>
					<td>{{ user.lastname }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_back_user_index') }}" class="btn btn-primary mb-1">Back to list</a>

		<a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn btn-warning mb-1">Edit</a>

		{{ include('back/user/_delete_form.html.twig') }}

	</div>
{% endblock %}
