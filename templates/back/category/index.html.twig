{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block main %}
    <h1>All Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Subtitle</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td><img src="{{ category.picture }}" alt="" width="125px"></td>
                <td>{{ category.subtitle }}</td>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_back_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_back_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_category_new') }}">Create new</a>
{% endblock %}
