{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block main %}

<div class="small-container">

            <div class="row">
            {% for category in categories %}     
                <div class="col-4">
                    <img src= "{{ category.picture }}" alt="">
                    <h4>{{ category.name }}</h4>
                </div>
            {% endfor %}
        </div>

{% endblock %}
