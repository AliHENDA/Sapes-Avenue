{% extends 'base.html.twig' %}

{% block title %}My addresses - Sapes Avenue{% endblock %}

{% block main %}

<div class="container">

    <h1>My addresses</h1>

    <a href="{{ path('app_front_address_add')}}" class="btn">Add an address</a> <br>
    <hr>

    <a class="btn" href="{{ path('app_front_account')}}">Retour</a><br>

    {% if (app.user.addresses)|length == 0 %}
        <p class="text-center">
        Vous n'avez pas encore ajoutÃ© dans votre compte client.
        Pour en ajouter une, cliquer ici <a href="{{ path('app_front_address_add')}}"></a>
        </p> 

    {% else %}

        <div class="row">
        {% for address in app.user.addresses %}
            <div class="col-md-4 mb-2">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ address.name }}</h5>
                            <p class="card-text">
                            {{address.address}} <br> 
                            {{address.postal}} <br>
                            {{ address.city}}
                            {{ address.country}}
                            </p>
                            <a href="{{ path('app_front_address_edit', {id:address.id} )}}" class="btn btn-warning">Modifier</a> | <a href="{{ path('app_front_address_delete', {id:address.id} )}}" class="btn btn-danger">Supprimer</a>
                     </div>
                </div>
            </div>
        {% endfor %}
        </div>  
    {% endif %}

    </div> 


{% endblock %}